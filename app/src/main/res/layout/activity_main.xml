<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@android:color/white">

   <com.wlazly.customview.combination.CustomTitle2
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:backText="heee"
       app:backTextColor="@android:color/black"
       app:backBg="@color/red"
       app:rightText="rightMore"
       app:rightTextColor="@android:color/holo_red_light"
       app:rightBg="@color/colorPrimaryDark"
       app:titleText="customView"
       app:titleTexColor="@android:color/black"
       app:titleBg="@color/yellow"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京欢迎你"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/bottom_rectangle"
        android:padding="20dp"
        />

    <com.wlazly.customview.inherit.CustomTextView
        android:id="@+id/customTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="hello"
        android:padding="5dp"
        android:textColor="@android:color/black"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <RadioButton
            android:id="@+id/bt0"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/radiogroup_select"
            android:button="@null"
            android:text="分类"
            android:gravity="center"
            android:checked="true"
            android:textColor="@android:color/black"/>

        <RadioButton
            android:id="@+id/bt1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/radiogroup_select"
            android:button="@null"
            android:text="我的"
            android:gravity="center"
            android:textColor="@android:color/black"/>
    </RadioGroup>

    <com.wlazly.customview.inherit.CustomView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffaacc"
        />

    <com.wlazly.customview.inherit.PasswordInputView
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:maxLength="6"
        android:inputType="number"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />

    <com.wlazly.customview.inherit.CustomRatingBar
        android:id="@+id/customRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:startNum="5"
        app:fillNum="4"
        app:isClickable="true"
       app:emptyDrawable="@mipmap/favourite_nor"
        app:fillDrawable="@mipmap/favourite_pressed"
        android:layout_marginTop="10dp"
        />

    <com.wlazly.customview.inherit.CustomRatingBar2
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:startCount="5"
        app:fillCount="4.3"
        app:stepNum="0.3"
        app:emptyBitmap="@mipmap/favourite_nor"
        app:fillBitmap="@mipmap/favourite_pressed"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="hellodfdsafsdfsdfasdfasdfadfad"
            android:background="@color/red"/>

    </LinearLayout>
</LinearLayout>
